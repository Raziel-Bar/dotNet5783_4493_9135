<Window x:Class="PL.AdminVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Verify" Height="150" Width="300" MaxWidth="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/pics/red-wine.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="HeaderTextBlock"  Grid.Row="0" TextAlignment="Center" TextWrapping="Wrap" Text="Please Enter Password" Margin="2,2,2,2" FontSize="16" Foreground="white"/>
        <PasswordBox Name="AdminVerificationPasswordBox" Grid.Row="1" Margin="20,2" MaxLength="4" KeyDown="EnterKeyCheck"/>
        <TextBlock Name="WrongPasswordTextBlock" Visibility="Hidden" Grid.Row="2" TextAlignment="Center" TextWrapping="Wrap" Text="Wrong Password (Hint: 1234)" Margin="2,2,2,2" FontSize="10" Foreground="red" FontStyle="Italic"/>
        <Button Name="VerifyButton" Content="Verify" Grid.Row="3" Height="30" Width="50" HorizontalAlignment="center" Margin="2,2,2,2" Click="VerifyPassword_Click" Style="{StaticResource ButtonStyleLowerRuler}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
