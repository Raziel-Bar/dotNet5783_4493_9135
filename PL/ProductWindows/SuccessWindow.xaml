<Window x:Class="PL.ProductWindows.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.ProductWindows"
        mc:Ignorable="d"
        Title="SuccessMessageWindow" Height="150" Width="auto" MaxWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="SuccessTextBlock" Grid.Row="0" TextWrapping="Wrap" Text="Sample"  Margin="2,2,2,2" FontSize="16"/>
        <Button Name="OKButton" Grid.Row="1" Height="30" Width="50" Content="OK" HorizontalAlignment="Right" Margin="2,2,2,2" Click="CloseWindow"/>
    </Grid>
</Window>
