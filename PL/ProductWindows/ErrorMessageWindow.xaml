<Window x:Class="PL.ProductWindows.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.ProductWindows"
        mc:Ignorable="d"
        Title="ErrorMessageWindow" Height="auto" MaxHeight="200" Width="auto" MaxWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="ErrorMessageTextBlock" Grid.Row="0" TextWrapping="Wrap" Text="Sample" Margin="2,2,2,2" FontSize="16"/>
        <Button Name="OKButton" Content="OK" Grid.Row="1" Height="30" Width="50" HorizontalAlignment="Right" Margin="2,2,2,2" Click="CloseWindow">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
